doctype html
html
	head
		title Explore your different options
		link(rel='stylesheet', href='/css/bootstrap.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
		script(src= "https://code.jquery.com/jquery-3.1.1.js", integrity= "sha256-16cdPddA6VdVInumRGo6IbivbERE8p7CQR3HzTBuELA=", crossorigin= "anonymous")
		script(src= "/js/bootstrap.js")

	body
		nav.navbar.navbar-default.navbar-static-top
			.container-fluid
				// Brand and toggle get grouped for better mobile display
				.navbar-header
					a.navbar-brand(href='/') Take Control
				ul.nav.navbar-nav
					li
						a(href='/quiz') Quiz 
					li.active
						a(href='/options') Info

		h1 Explore different birth control options
		for option in options
			.panel.panel-default
				.panel-heading
					h3.panel-title= option.name
				.panel-body
					p= option.What
				ul.list-group
					li.list-group-item Cost: #{option.Cost}
					li.list-group-item Longevity: #{option.Longevity}
					li.list-group-item Benefits: #{option.Pros}
					li.list-group-item Problems: #{option.Cons}

		h4 For more information about birth control options, 
			a(href="https://www.plannedparenthood.org/learn/birth-control") Visit
					| the Planned Parenthood website

