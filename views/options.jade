doctype html
html
	head
		title Explore your different options
		link(rel='stylesheet', href='/css/bootstrap.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
		script(src= "https://code.jquery.com/jquery-3.1.1.js", integrity= "sha256-16cdPddA6VdVInumRGo6IbivbERE8p7CQR3HzTBuELA=", crossorigin= "anonymous")
		script(src= "/js/bootstrap.js")

	body
		nav.navbar.navbar-default.navbar-static-top
			.container-fluid
				// Brand and toggle get grouped for better mobile display
				.navbar-header
					a.navbar-brand(href='/') Take Control
				ul.nav.navbar-nav
					li
						a(href='/quiz') Quiz 
					li.active
						a(href='/options') Info
					li
						a(href="https://www.plannedparenthood.org/learn/birth-control") Planned Parenthood

		h1.options_title Explore different birth control options
		for option in options
			.panel.panel-default
				.panel-heading
					h3.panel-title= option.name
				ul.list-group
					li.list-group-item
						b Description: 
						span  #{option.What}
					li.list-group-item
						b Cost: 
						span  #{option.Cost}
					li.list-group-item 
						b Longevity:
						span  #{option.Longevity}
					li.list-group-item
						b Benefits: 
						span  #{option.Pros}
					li.list-group-item
						b Problems: 
						span  #{option.Cons}

